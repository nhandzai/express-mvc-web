<script>
  function updateQueryString() {
    const form = document.getElementById('catalog-form');
    const checkboxes = form.querySelectorAll('input[type="checkbox"]:checked');
    const queryParams = [];

    checkboxes.forEach((checkbox) => {
      queryParams.push('q=' + encodeURIComponent(checkbox.value));
    });

    if (queryParams.length > 0) {
      form.action = '/catalogFilter?' + queryParams.join('&');
    } else {
      form.action = '/catalog';
    }
    form.submit();
  }

  function preserveCheckboxState() {
    const urlParams = new URLSearchParams(window.location.search);
    const checkedCategories = urlParams.getAll('q');

    checkedCategories.forEach((category) => {
      const checkbox = document.getElementById(category);
      if (checkbox) {
        checkbox.checked = true;
      }
    });
  }
  window.onload = preserveCheckboxState;
</script>